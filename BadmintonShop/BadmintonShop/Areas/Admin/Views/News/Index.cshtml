@model IEnumerable<BadmintonShop.Models.DAL.New>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="card">
            <div class="card-action">
                Danh sách tin tức
            </div>
            <hr />
            <div class="col-sm-6">
                <div class="dataTables_length">
                    <a class="btn btn-sm btn-default" href="/Admin/News/Create"><img src="~/Content/image/Button-Add-icon.png" height="27" /></a>
                </div>
            </div>
            <div class="col-sm-6">
                <div id="dataTables-example_filter" class="dataTables_filter">
                    @using (Html.BeginForm("Index", "News", FormMethod.Post, new { @id = "search-form" }))
                    {
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Tìm kiếm" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default hidden-xs"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    }
                </div>
            </div>
            <div class="card-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NewsType.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsPublic)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Author)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </th>
                            <th>#</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NewsType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsPublic)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Author)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>
                                <td>
                                    <div>
                                        <a href="/Admin/News/Edit/@item.ID" data-toggle="tooltip" title="Cập nhập tài khoản" class="btn btn-default btn-sm">
                                            <img src="~/Content/image/edit-validated-icon.png" />
                                        </a>
                                        <a href="/Admin/News/Details/@item.ID" data-toggle="tooltip" title="Chi tiết tài khoản" class="btn btn-default btn-sm">
                                            <img src="~/Content/image/Actions-view-list-details-icon.png" />
                                        </a>
                                        <a href="/Admin/News/Delete/@item.ID" data-toggle="tooltip" title="Xóa tài khoản" class="btn btn-default btn-sm" onclick="return Xoa();">
                                            <img src="~/Content/image/Actions-edit-delete-icon.png" />
                                        </a>
                                        <script type="text/javascript" language="javascript">
                                            function Xoa() {
                                                var result = confirm("Bạn có thực sự muốn xóa không?");
                                                if (result) {
                                                    return true;
                                                }
                                                return false;
                                            }
                                        </script>
                                    </div>
                                </td>
                            </tr>
                        }

                    </table>

                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>
